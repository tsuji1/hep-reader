{
  "name": "epub-html-viewer",
  "version": "1.0.0",
  "description": "EPUB to HTML viewer with bookmark functionality",
  "main": "server/dist/index.js",
  "scripts": {
    "server": "node server/dist/index.js",
    "server:dev": "ts-node server/index.ts",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && tsc",
    "build:client": "cd client && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:all": "npm test && cd client && npm test"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
